@using MvcApp.HtmlHelpers;
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href='https://fonts.googleapis.com/css?family=Poppins' rel='stylesheet' type='text/css'>
    <title>@ViewBag.Title - @MvcApp.Services.SiteInfo.SiteName()</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="page-wrapper">

        <nav class="navbar navbar-inverse navbar-big @(ViewBag.Title.Contains("Home") ? "" : "navbar-bg") ">
            <div class="container-fluid">
                <div class="navbar-header">
                    @Html.ActionLink(MvcApp.Services.SiteInfo.SiteName().ToUpper(), "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <button class="navbar-toggler hidden-md-up" type="button" data-toggle="collapse" data-target="#collapsing-navbar">
                    &#9776;
                </button>
                <div class="collapse navbar-toggleable-sm" id="collapsing-navbar">
                    <ul class="nav navbar-nav">
                        <li class="@Html.IsSelected(actions: "Index", controllers: "Home")">
                            <a href="@Url.Action("Index", "Home")">HOME</a>
                        </li>
                        <li class="@Html.IsSelected(actions: "About", controllers: "Home")">
                            <a href="@Url.Action("About", "Home")">ABOUT</a>
                        </li>
                        <li class="@Html.IsSelected(actions: "Contact", controllers: "Home")">
                            <a href="@Url.Action("Contact", "Home")">CONTACT</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <div class="container-fluid body-content">
            @RenderBody()
        </div>

    </div>
    <footer class="container-fluid">
        <div class="row">
            <div class="col-md-4">
                <span>Akeel Mughal</span><span class="text-light">&nbsp; Full Stack Developer</span><br />
                <span>London, Worldwide, Remote</span><span class="text-light">&nbsp; akeelm_uk@hotmail.com</span><br />
            </div>
            <div class="col-md-6">
                <div class="hidden-md-up m-t-2"></div>
                <span>Available for remote freelancing.</span><br />
                <span class="text-light text-small">.NET / C# / VB.NET / SQL Server / ASP.NET / MVC / Entity Framework / JavaScript / JQuery / CSS / LESS / SASS / KnockoutJS / Bootstrap / Database Design / Performance Tuning</span>
            </div>
        </div>
        <hr />
        <p class="pull-xs-right text-right"><a href="@Url.Action("About", "Home")#License">License</a> - &copy; @DateTime.Now.Year - @MvcApp.Services.SiteInfo.SiteName()</p>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
<script type="text/javascript">
    //navbar scroll function
    $(window).scroll(function () {
        if ($(window).scrollTop() > 10) {
            $("nav").addClass("bg-inverse navbar-fixed-top");
            $("nav").removeClass("navbar-big");
            $(".body-content").addClass("container-buffer");
            @(ViewBag.Title.Contains("Home") ? null : MvcHtmlString.Create("$('nav').removeClass('navbar-bg');"))
        } else {
            $("nav").removeClass("bg-inverse navbar-fixed-top");
            $("nav").addClass("navbar-big");
            $(".body-content").removeClass("container-buffer");
            @(ViewBag.Title.Contains("Home") ? null : MvcHtmlString.Create("$('nav').addClass('navbar-bg');"))
        }
    });
</script>